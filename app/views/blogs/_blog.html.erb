<tr>
	<td><%= blog.title %></td>
	<td>Published <%= distance_of_time_in_words(blog.created_at, Time.now)  %> ago</td>
	<td><%= blog.body %></td>
	<td><%= link_to blog.status, status_control_blog_path(blog) %></td>
	<td><%= link_to 'Show', blog %></td>
	<td><%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:website_admin) %></td>
	<td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:website_admin) %></td>
</tr>