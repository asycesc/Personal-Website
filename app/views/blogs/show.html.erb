<div class="col-sm-8 blog-main">
	<nav class="breadcrumb">
		<%= link_to "Home", root_path, class:'breadcrumb-item' %>
		<%= link_to @blog.topic.title, topic_path(@blog.topic), class:'breadcrumb-item' %>
	  	<span class="breadcrumb-item active"><%= @blog.title %></span>
	  	<span class="pull-right">
	  		<%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:website_admin) %> / 
	  		<%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure?' }  if logged_in?(:website_admin) %>
	  	</span>
	</nav>
	<h1><%= @blog.title %></h1>
	<hr>

	<p>
		<%= markdown @blog.body %>
	</p>

	<hr>

	<%= render 'comments/comment_form' %>

	<div id="comments" data-blog-id="<%= @blog.id %>">
		<%= render @blog.comments %>
	</div>

</div>