<div class="container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag @portfolio.main_image, width:'100%'%>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio.title %> </h1>
			<hr>
			<h2><%= @portfolio.subtitle %> </h2>
			<em><%= @portfolio.body %> </em>
			<hr>
			<h3>Technology Stack</h3>
			<% @portfolio.technologies.each do |tech| %>
				<p><%= tech.name %></p>      
			<% end %>

		</div>
	</div>
</div>





