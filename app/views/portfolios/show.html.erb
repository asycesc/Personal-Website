<div class="container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag portfolio_image(@portfolio.main_image, 'main_image'), width: '100%'%>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio.title %> </h1>
			<hr>
			<h2><%= @portfolio.subtitle %> </h2>
			<em><%= @portfolio.body %> </em>
			<hr>
			<h3>Technology Stack</h3>
			<% @portfolio.technologies.each do |tech| %>
				<p><%= tech.name %></p>      
			<% end %>

			<% if logged_in?(:website_admin) %>
				<div>
					<%= link_to 'edit', edit_portfolio_path(@portfolio) %> /
					<%= link_to 'delete', portfolio_path, method: :delete, data: { confirm: 'Are you sure?' } %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>





